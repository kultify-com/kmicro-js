{
  "name": "@kultify/kmicro-js",
  "version": "0.0.20",
  "description": "",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kultify-com/kmicro-js.git"
  },
  "source": "src/index.ts",
  "main": "dist/main.js",
  "types": "dist/types.d.ts",
  "scripts": {
    "build": "tsup",
    "test": "vitest src/",
    "lint": "biome lint",
    "ci": "biome ci && pnpm vitest run",
    "run-nats": "docker run -p 4222:4222 nats -js"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts",
      "require": "./dist/index.cjs"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist/**/*"
  ],
  "tsup": {
    "format": [
      "cjs",
      "esm"
    ],
    "sourcemap": true,
    "clean": true,
    "dts": true,
    "entry": [
      "src/index.ts"
    ]
  },
  "keywords": [
    "microservice"
  ],
  "author": "Kultify GmbH",
  "license": "MIT",
  "dependencies": {
    "@nats-io/services": "3.1.0",
    "@nats-io/transport-node": "3.1.0",
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/core": "^2.0.1",
    "@opentelemetry/exporter-trace-otlp-proto": "^0.203.0",
    "@opentelemetry/instrumentation-pino": "^0.50.0",
    "@opentelemetry/resources": "^2.0.1",
    "@opentelemetry/sdk-node": "^0.203.0",
    "@opentelemetry/sdk-trace-node": "^2.0.1",
    "@opentelemetry/semantic-conventions": "^1.36.0",
    "pino": "^9.9.0"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.2",
    "@testcontainers/nats": "^11.5.1",
    "@tsconfig/node20": "^20.1.6",
    "@types/node": "^24.3.0",
    "jaeger-client": "^3.19.0",
    "moleculer": "^0.14.35",
    "tsup": "^8.5.0",
    "typescript": "5.9.2",
    "vitest": "^3.2.4"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "cpu-features",
      "esbuild",
      "protobufjs",
      "ssh2"
    ]
  }
}